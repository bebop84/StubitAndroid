<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg1"

    tools:context="com.example.bit_user.myapplication.QnAActivity">

    <ImageView
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/top"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="수업선택"
        android:id="@+id/check_lesson_qna"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:text="List"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/check_lesson_qna">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qna_teacher"
        android:layout_above="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="질문내용"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ask_Message"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView2"
        android:text = "@string/one_more_time"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/scrollView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ppt_number"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/ask_Message"
        android:text = "PPT NUMBER"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/scrollView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="질문하기"
        android:id="@+id/ask_btn"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/ask_Message"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="dd"
        android:id="@+id/dd"
        android:layout_centerVertical="true"
        android:layout_below="@+id/ask_btn"
        android:layout_alignParentStart="true" />

</RelativeLayout>
