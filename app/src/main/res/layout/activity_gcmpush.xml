<?xml version="1.0"?>

    <LinearLayout android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginBottom="20dp" android:background="#FFFFC0">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:text="보내는 사람" android:textStyle="bold" android:textSize="24dp" android:layout_marginRight="4dp" android:layout_marginLeft="4dp" android:layout_marginTop="20dp"/>


    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginRight="4dp" android:layout_marginLeft="4dp" android:layout_marginTop="20dp">

</LinearLayout>


    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginRight="4dp" android:layout_marginLeft="4dp" android:layout_marginTop="20dp">

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:text="수신 메시지" android:textStyle="bold" android:textSize="16dp" android:id="@+id/messageOutput"/>

</LinearLayout>

</LinearLayout>


    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginBottom="20dp" android:background="#D7D7FF">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:text="받는 사람" android:textStyle="bold" android:textSize="24dp" android:layout_marginRight="4dp" android:layout_marginLeft="4dp" android:layout_marginTop="40dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:textStyle="bold" android:textSize="16dp" android:layout_marginTop="20dp" android:id="@+id/messageInput" android:hint="보낼 메시지를 입력하고 [전송하기] 버튼을 누르세요." android:lines="2" android:layout_toLeftOf="@+id/sendButton" android:layout_alignParentLeft="true"/>


    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginBottom="20dp" android:layout_marginRight="4dp" android:layout_marginLeft="4dp" android:layout_marginTop="20dp">

    <Button android:layout_height="wrap_content" android:layout_width="180dp" android:text="전송하기" android:layout_gravity="center_horizontal" android:id="@+id/sendButton"/>

</LinearLayout>

</LinearLayout>

</LinearLayout>