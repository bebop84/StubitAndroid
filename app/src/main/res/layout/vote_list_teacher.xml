<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/vote_number_teacher"
        android:text="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView android:id="@+id/lesson_name_teacher"
        android:text="lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView android:id="@+id/vote_title_teacher"
        android:text="title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView android:id="@+id/vote_time_teacher"
        android:text="time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button android:id="@+id/click_vote_teacher"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="투표현황"  />

    <Button android:id="@+id/remove_vote_teacher"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="삭제"  />
</LinearLayout>