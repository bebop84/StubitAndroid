<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:clickable="true"
   >


    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="#9030DFF2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/frameLayout3"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/frameLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Notice"
            android:id="@+id/textView10"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="left|top" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/notice_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="left|top" />

        <ImageView
            android:layout_width="281dp"
            android:layout_height="10dp"
            android:background="@drawable/table"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal|bottom" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#900579A5"
        android:id="@+id/frameLayout4"
        android:layout_above="@+id/frameLayout1"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/startApp_btn"
            android:background="@drawable/home_icon"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/textView12"
            android:layout_marginRight="5dp"
            android:layout_gravity="right|bottom" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="225dp"
        android:layout_height="80dp"
        android:background="#90A3AAAE"
        android:id="@+id/frameLayout1"
        android:layout_below="@+id/frameLayout3"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@+id/frameLayout3"
        android:layout_alignEnd="@+id/frameLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Time"
            android:layout_marginLeft="60dp"
            android:id="@+id/textView11"
            android:layout_gravity="left|center_vertical" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/time_icon1"
            android:layout_marginLeft="5dp"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00:00"
            android:textColor="#fff"
            android:id="@+id/stu_count"
            android:layout_below="@+id/linearLayout3"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right|center_vertical" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/refresh_icon"
            android:layout_marginLeft="300dp"
            android:id="@+id/refresh_btn"
            android:layout_gravity="left|center_vertical" />
    </FrameLayout>


</RelativeLayout>