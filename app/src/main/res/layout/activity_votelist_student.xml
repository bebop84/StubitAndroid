<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg1"
    tools:context="com.example.bit_user.myapplication.VoteActivity">

    <ImageView
        android:layout_width="800dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/TextView1"
        android:layout_alignParentTop="true"
        android:background="#0055bedb"
        android:id="@+id/linearLayout6">
        <View
            android:layout_marginTop="20dp"
            android:layout_height="2dip"
            android:background="#FF909090"
            android:layout_width="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="STUBIT 투표 학생 페이지"
            android:id="@+id/textView16"
            android:textSize="28dp"

            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="STUBIT VOTE PAGE"
            android:textStyle="bold|italic"
            android:id="@+id/textView17"
            android:layout_marginTop="1dp" />
        <View
            android:layout_height="2dip"
            android:background="#FF909090"
            android:layout_width="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="투표 목록"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_below="@+id/imageView"
        android:id="@+id/textt"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:id="@+id/vote_list_student"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textt"
        android:layout_above="@+id/make_vote_btn" />


</RelativeLayout>
