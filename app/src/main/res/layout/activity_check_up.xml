<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg1"
    tools:context="com.example.bit_user.myapplication.checkUpActivity">

    <ImageView
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/top"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/check_date"
        android:layout_margin="20dp"
        android:textSize="30dp"

        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true" />


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="78dp"
        android:id="@+id/frameLayout">


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lesson_list"
            android:layout_gravity="center" />
    </FrameLayout>
    <TextView
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/select_lesson"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="카운트"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/count_timer"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/count_timer" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/count_timer"
        android:layout_above="@+id/check_up_Btn"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView" />
/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록"
        android:id="@+id/check_up_Btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp" />


</RelativeLayout>
